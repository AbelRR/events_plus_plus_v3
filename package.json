    "dependencies": {
        "@apollo/client": "^3.5.10",
        "@fullhuman/postcss-purgecss": "^4.1.3",
        "@hotwired/turbo-rails": "github:hotwired/turbo-rails",
        "autoprefixer": "^10.4.4",
        "axios": "^0.26.0",
